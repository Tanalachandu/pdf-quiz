{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext", // <--- THIS IS CRUCIAL
    "moduleResolution": "NodeNext", // <--- THIS IS CRUCIAL
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}